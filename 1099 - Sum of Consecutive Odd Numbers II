#include<stdio.h>
int main()
{
    int M,x,y,i,j,sum=0;

    scanf("%d",&M);
  for(j=0;j<M;j++){
    scanf("%d%d",&x,&y);

   if(x>y){
            sum=0;
            for(i=y+1;i<x;i++)
            {
                if(i%2!=0)
                sum+=i;

            }printf("%d\n",sum);
        }
        else
        {
            sum=0;
            for(i=x+1;i<y;i++)
            {
                if(i%2!=0)
                sum+=i;

            }printf("%d\n",sum);
        }


}
    return 0;
}
                
